{
  "name":"christianbarkowsky/contao-tabcontrol",
  "description":"Create tabs as content element. Extension for Contao Open Source CMS",
  "keywords":["tab", "tabs", "tabcontrol", "contao"],
  "type":"contao-bundle",
  "license":"LGPL-3.0+",
  "authors":[
    {
      "name":"Christian Barkowsky",
      "homepage":"https://plenta.io",
      "email":"hallo@plenta.io",
      "role":"Developer"
    }
  ],
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/christianbarkowsky"
    }
  ],
  "support": {
    "email": "hallo@plenta.io",
    "issues": "https://github.com/christianbarkowsky/contao-tabcontrol/issues",
    "source": "https://github.com/christianbarkowsky/contao-tabcontrol",
    "docs": "https://plenta.io/tabcontrol-contao"
  },
  "require":{
    "php":"^7.4 || ^8.0",
    "contao/core-bundle":"^4.9",
    "menatwork/contao-multicolumnwizard-bundle": "^3.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.12",
    "contao/manager-bundle": "~4.9"
  },
  "extra": {
    "contao-manager-plugin": "Plenta\\TabControl\\ContaoManager\\Plugin"
  },
  "autoload": {
    "psr-4": {
      "Plenta\\TabControl\\": "src/Plenta/TabControl"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "contao-components/installer": true,
      "contao/manager-plugin": true,
      "contao-community-alliance/composer-plugin": true
    }
  },
  "replace": {
    "contao-legacy/tabcontrol": "self.version",
    "contao-legacy/contao-tabcontrol": "self.version"
  }
}
